<%= provide(:title, "Request a quote") %>
<h1>Request a quote</h1>

<div class="row">
	<div class="large-10 large-offset-1 columns">
		<%= form_for(@quote) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name_first %>
			<%= f.text_field :name_first %>

			<%= f.label :name_last %>
			<%= f.text_field :name_last %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :phone %>
			<%= f.text_field :phone %>

			<%= f.label :item %>
			<%= f.text_field :item %>

			<%= f.label :color1 %>
			<%= f.text_field :color1 %>

			<%= f.label :color2 %>
			<%= f.text_field :color2 %>

			<%= f.label :paper %>
			<%= f.text_field :paper %>

			<%= f.label :fold %>
			<%= f.text_field :fold %>

			<%= f.label :quantity %>
			<%= f.text_field :quantity %>

			<%= f.label :message %>
			<%= f.text_field :message %>

			<%= f.submit "Submit your request", class: "button" %>
		<% end %>
	</div>
</div>